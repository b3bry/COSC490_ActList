<div class="panel panel-default">
  <div class="panel-body">
    <table class="table table-striped table-hover">
      <thead>
      <th><h2>Name</h2></th>
      <th><h2>Delete</h2></th>
      <th><h2>Up</h2></th>
      <th><h2>Down</h2></th>
      <th><h2>Top</h2></th>
      <th><h2>Bottom</h2></th>
      </thead>
      <% @items.each do |item| %>
          <tr>
            <td class="col-md-6"><h1><%=item.name%></h1></td>
            <td class="col-md-1"><%=link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-xs pull-right'%></td>
            <td class="col-md-1"><%=link_to 'Up', items_up_path(:id => item.id), :class => 'btn btn-success btn-xs pull-right'%></td>
            <td class="col-md-1"><%=link_to 'Down', items_down_path(:id => item.id), :class => 'btn btn-success btn-xs pull-right'%></td>
            <td class="col-md-1"><%=link_to 'Top', items_top_path(:id => item.id), :class => 'btn btn-primary btn-xs pull-right'%></td>
            <td class="col-md-1"><%=link_to 'Bottom', items_bottom_path(:id => item.id), :class => 'btn btn-primary btn-xs pull-right'%></td>
          </tr>
      <%end unless @items.blank?%>
    </table>
  </div>
</div>

<%= link_to 'New Item', items_new_path(:list_id => @list_id),:class => 'btn btn-block btn-primary'%>